doctype html
html 
    head 
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body    
        h1 Pets
        a.button(href="/update-cobj") Add to this table
        table
            thead
                tr
                    th ID
                    th Name
                    th Favorite Meal
                    th Favorite Toy
            tbody
                each item in data
                    tr
                        td #{item.id}
                        td #{item.properties.name}
                        td #{item.properties.favorite_meal}
                        td #{item.properties.favorite_toy}